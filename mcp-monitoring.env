# MCP Server Monitoring Configuration

# Health check intervals (in seconds)
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# GitHub MCP Server specific settings
GITHUB_MCP_VERIFY_TOKEN=true
GITHUB_MCP_CHECK_TOOLSETS=true
GITHUB_MCP_LOG_LEVEL=info

# Monitoring settings
ENABLE_HEALTH_CHECKS=true
ENABLE_LOG_MONITORING=true
LOG_ERROR_THRESHOLD=5

# Verification schedule (cron format)
# Run verification every 5 minutes
VERIFICATION_SCHEDULE="*/5 * * * *"